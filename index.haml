    <script>
        // PWA Install functionality
        let deferredPrompt;
        let installShown = false;

        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            
            // Show install prompt after 3 seconds if not already shown
            if (!installShown && !localStorage.getItem('pwa-dismissed')) {
                setTimeout(() => {
                    showInstallPrompt();
                }, 3000);
            }
        });

        function showInstallPrompt() {
            const prompt = document.getElementById('install-prompt');
            if (prompt && !installShown) {
                prompt.classList.add('show');
                installShown = true;
            }
        }

        function installApp() {
            const prompt = document.getElementById('install-prompt');
            prompt.classList.remove('show');
            
            if (deferredPrompt) {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then((choiceResult) => {
                    if (choiceResult.outcome === 'accepted') {
                        console.log('User accepted the install prompt');
                    }
                    deferredPrompt = null;
                });
            }
        }

        function dismissInstall() {
            const prompt = document.getElementById('install-prompt');
            prompt.classList.remove('show');
            localStorage.setItem('pwa-dismissed', 'true');
        }

        // Check if running as installed PWA
        window.addEventListener('DOMContentLoaded', () => {
            if (window.matchMedia('(display-mode: standalone)').matches) {
                console.log('Running as installed PWA');
                // Hide install prompt if running as PWA
                const prompt = document.getElementById('install-prompt');
                if (prompt) {
                    prompt.style.display = 'none';
                }
            }
        });

        // Dane z originalnego kalkulatora
        const basicRolls = [];
        
        // Generowanie wszystkich możliwych rzutów
        function generateAllRolls() {
            basicRolls.length = 0;
            for (let tens = 0; tens < 10; tens++) {
                for (let ones = 0; ones < 10; ones++) {
                    const tensValue = tens * 10;
                    let result;
                    if (tensValue === 0 && ones === 0) {
                        result = 100;
                    } else {
                        result = tensValue + ones;
                        if (result === 0) result = 100;
                    }
                    
                    basicRolls.push({
                        tensDigit: tens,
                        onesDigit: ones,
                        result: result
                    });
                }
            }
        }

        // Aplikuje ułatwienie lub utrudnienie
        function applyAdvantageDisadvantage(roll, modifierType) {
            const tensDigit = roll.tensDigit;
            const onesDigit = roll.onesDigit;
            
            let swappedResult = onesDigit * 10 + tensDigit;
            if (swappedResult === 0) swappedResult = 100;
            
            const originalResult = roll.result;
            
            if (modifierType === 'advantage') {
                return Math.min(originalResult, swappedResult);
            } else if (modifierType === 'disadvantage') {
                return Math.max(originalResult, swappedResult);
            } else {
                return originalResult;
            }
        }

        // Oblicza prawdopodobieństwo sukcesu
        function calculateSuccessProbability(difficulty, numericModifier, advantageType) {
            const modifiedDifficulty = Math.max(1, Math.min(100, difficulty + numericModifier));
            
            let successes = 0;
            const totalRolls = basicRolls.length;
            
            for (const roll of basicRolls) {
                const finalResult = applyAdvantageDisadvantage(roll, advantageType);
                if (finalResult <= modifiedDifficulty) {
                    successes++;
                }
            }
            
            return {
                probability: successes / totalRolls,
                successes: successes,
                totalRolls: totalRolls,
                modifiedDifficulty: modifiedDifficulty
            };
        }

        // Generuje dystrybuantę (CDF)
        function getCumulativeDistributionFunction(advantageType) {
            const distribution = {};
            
            for (const roll of basicRolls) {
                const result = applyAdvantageDisadvantage(roll, advantageType);
                distribution[result] = (distribution[result] || 0) + 1;
            }
            
            const cdf = {};
            for (let value = 1; value <= 100; value++) {
                let cumulative = 0;
                for (let v = 1; v <= value; v++) {
                    cumulative += distribution[v] || 0;
                }
                cdf[value] = cumulative / 100;
            }
            
            return cdf;
        }

        // Przechowuje dane ostatniego porównania
