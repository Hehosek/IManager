        // Pokazuje sekcję
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
        }

        // Obsługa wyboru modyfikatorów
        document.addEventListener('DOMContentLoaded', function() {
            generateAllRolls();
            
            // Obsługa kliknięć na modyfikatory
            document.querySelectorAll('.modifier-button').forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.toggle('selected');
                });
            });
        });

        // Oblicza prawdopodobieństwa dla wybranego poziomu trudności
        function calculateProbabilities() {
            const difficulty = parseInt(document.getElementById('difficulty-input').value);
            const selectedModifiers = document.querySelectorAll('.modifier-button.selected');
            
            if (selectedModifiers.length === 0) {
                alert('Wybierz przynajmniej jeden modyfikator!');
                return;
            }
            
            const results = [];
            
            selectedModifiers.forEach(button => {
                const [advantageType, numericModifier] = button.dataset.modifier.split(',');
                const name = button.textContent.split('(')[0].trim();
                
                if (advantageType === 'advantage_vs_bonus') {
                    const advResult = calculateSuccessProbability(difficulty, 0, 'advantage');
                    const bonusResult = calculateSuccessProbability(difficulty, 10, 'none');
                    results.push(['  ↳ Ułatwienie', advResult]);
                    results.push(['  ↳ +10', bonusResult]);
                } else if (advantageType === 'disadvantage_vs_penalty') {
                    const disResult = calculateSuccessProbability(difficulty, 0, 'disadvantage');
                    const penaltyResult = calculateSuccessProbability(difficulty, -10, 'none');
                    results.push(['  ↳ Utrudnienie', disResult]);
                    results.push(['  ↳ -10', penaltyResult]);
                } else {
                    const result = calculateSuccessProbability(difficulty, parseInt(numericModifier), advantageType);
                    results.push([name, result]);
                }
            });
            
            // Sortowanie według prawdopodobieństwa
            results.sort((a, b) => b[1].probability - a[1].probability);
            
            displayResults(results, difficulty);
        }

        // Wyświetla wyniki
