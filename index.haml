                <table class="results-table">
                    <thead>
                        <tr>
                            <th>Modyfikator</th>
                            <th>Prawdopodobieństwo</th>
                            <th>Sukcesy</th>
                            <th>Efektywna trudność</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            results.forEach(([name, result]) => {
                const probPercent = (result.probability * 100).toFixed(2) + '%';
                const successRatio = `${result.successes}/100`;
                
                html += `
                    <tr>
                        <td>${name}</td>
                        <td>${probPercent}</td>
                        <td>${successRatio}</td>
                        <td>${result.modifiedDifficulty}</td>
                    </tr>
                `;
            });
            
            html += '</tbody></table>';
            
            // Najlepszy modyfikator
            const best = results[0];
            html += `
                <div style="margin-top: 20px; padding: 15px; background: rgba(46, 204, 113, 0.2); border-radius: 5px;">
                    <strong class="highlight">🎯 NAJLEPSZY MODYFIKATOR: ${best[0]}</strong><br>
                    Prawdopodobieństwo sukcesu: ${(best[1].probability * 100).toFixed(2)}%
                </div>
            `;
            
            resultsDiv.innerHTML = html;
        }

        // Pokazuje porównanie modyfikatorów
        function showComparison(type) {
            lastComparisonType = type;
            const contentDiv = document.getElementById('comparison-content');
            
            if (type === 'advantage') {
                let html = `
                    <h2 class="highlight">UŁATWIENIE vs +10/+20 Z PRZERZUTEM</h2>
                    <div class="table-container">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Poziom</th>
                                    <th>Ułatwienie</th>
                                    <th>+10</th>
                                    <th>+20</th>
                                    <th>Z przerzutem</th>
                                </tr>
                            </thead>
                            <tbody>
                `;
                
                for (let difficulty = 1; difficulty <= 100; difficulty++) {
                    const advResult = calculateSuccessProbability(difficulty, 0, 'advantage');
                    const bonus10Result = calculateSuccessProbability(difficulty, 10, 'none');
                    const bonus20Result = calculateSuccessProbability(difficulty, 20, 'none');
                    const rerollProb = 1 - Math.pow(1 - difficulty/100, 2);
                    
                    html += `
                        <tr>
                            <td>${difficulty}</td>
                            <td>${(advResult.probability * 100).toFixed(2)}%</td>
                            <td>${(bonus10Result.probability * 100).toFixed(2)}%</td>
                            <td>${(bonus20Result.probability * 100).toFixed(2)}%</td>
                            <td>${(rerollProb * 100).toFixed(2)}%</td>
                        </tr>
                    `;
                }
                
                html += '</tbody></table></div>';
                contentDiv.innerHTML = html;
                
            } else { // disadvantage
                let html = `
                    <h2 class="highlight">UTRUDNIENIE vs -10/-20 Z PRZERZUTEM</h2>
                    <div class="table-container">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Poziom</th>
                                    <th>Utrudnienie</th>
                                    <th>-10</th>
                                    <th>-20</th>
                                    <th>Z przerzutem</th>
                                </tr>
                            </thead>
                            <tbody>
                `;
                
                for (let difficulty = 1; difficulty <= 100; difficulty++) {
                    const disResult = calculateSuccessProbability(difficulty, 0, 'disadvantage');
                    const penalty10Result = calculateSuccessProbability(difficulty, -10, 'none');
                    const penalty20Result = calculateSuccessProbability(difficulty, -20, 'none');
                    const rerollProb = Math.pow(difficulty/100, 2);
                    
                    html += `
                        <tr>
                            <td>${difficulty}</td>
                            <td>${(disResult.probability * 100).toFixed(2)}%</td>
                            <td>${(penalty10Result.probability * 100).toFixed(2)}%</td>
                            <td>${(penalty20Result.probability * 100).toFixed(2)}%</td>
                            <td>${(rerollProb * 100).toFixed(2)}%</td>
                        </tr>
                    `;
                }
                
                html += '</tbody></table></div>';
                contentDiv.innerHTML = html;
            }
            
            showSection('comparison-results');
        }

        // Pokazuje wykresy
        function showCharts() {
            const chartsContent = document.getElementById('charts-content');
            
            if (lastComparisonType === 'advantage') {
                chartsContent.innerHTML = `
                    <h2 class="highlight">WYKRESY - UŁATWIENIE vs +10/+20 Z PRZERZUTEM</h2>
                    <div class="chart-grid">
                        <div class="chart-box">
                            <div class="chart-title">Dystrybuanty (CDF) - Prawdopodobieństwo sukcesu</div>
                            <canvas id="cdf-chart" width="400" height="300"></canvas>
                        </div>
                    </div>
                `;
                
                setTimeout(() => {
                    createAdvantageCharts();
                }, 100);
                
            } else { // disadvantage
                chartsContent.innerHTML = `
                    <h2 class="highlight">WYKRESY - UTRUDNIENIE vs -10/-20 Z PRZERZUTEM</h2>
                    <div class="chart-grid">
                        <div class="chart-box">
                            <div class="chart-title">Dystrybuanty (CDF) - Prawdopodobieństwo sukcesu</div>
                            <canvas id="cdf-chart" width="400" height="300"></canvas>
                        </div>
                    </div>
                `;
                
                setTimeout(() => {
                    createDisadvantageCharts();
                }, 100);
            }
            
            showSection('charts-section');
        }

        // Tworzy wykresy dla ułatwienia
        function createAdvantageCharts() {
            const labels = [];
            for (let i = 1; i <= 100; i++) labels.push(i);
            
            // CDF dane
            const plus10CDF = {};
            const plus20CDF = {};
            const rerollCDF = {};
            
            for (let i = 1; i <= 100; i++) {
                plus10CDF[i] = calculateSuccessProbability(i, 10, 'none').probability;
                plus20CDF[i] = calculateSuccessProbability(i, 20, 'none').probability;
                rerollCDF[i] = 1 - Math.pow(1 - i/100, 2);
            }
            
            const advantageCDF = getCumulativeDistributionFunction('advantage');
            
            const cdfData = {
                labels: labels,
                datasets: [
                    {
                        label: 'Ułatwienie',
                        data: labels.map(x => advantageCDF[x]),
                        borderColor: '#e74c3c',
                        backgroundColor: 'rgba(231, 76, 60, 0.1)',
                        fill: true
                    },
                    {
                        label: '+10',
                        data: labels.map(x => plus10CDF[x]),
                        borderColor: '#3498db',
                        backgroundColor: 'rgba(52, 152, 219, 0.1)',
                        fill: true
                    },
                    {
                        label: '+20',
                        data: labels.map(x => plus20CDF[x]),
                        borderColor: '#2ecc71',
                        backgroundColor: 'rgba(46, 204, 113, 0.1)',
                        fill: true
                    },
                    {
                        label: 'Z przerzutem',
                        data: labels.map(x => rerollCDF[x]),
                        borderColor: '#f39c12',
                        backgroundColor: 'rgba(243, 156, 18, 0.1)',
                        fill: true
                    }
                ]
            };
            
            createChart('cdf-chart', cdfData, 'Prawdopodobieństwo sukcesu dla poziomu trudności');
        }

        // Tworzy wykresy dla utrudnienia
        function createDisadvantageCharts() {
            const labels = [];
            for (let i = 1; i <= 100; i++) labels.push(i);
            
            // CDF dane
            const minus10CDF = {};
            const minus20CDF = {};
            const rerollCDF = {};
            
            for (let i = 1; i <= 100; i++) {
                minus10CDF[i] = calculateSuccessProbability(i, -10, 'none').probability;
                minus20CDF[i] = calculateSuccessProbability(i, -20, 'none').probability;
                rerollCDF[i] = Math.pow(i/100, 2);
            }
            
            const disadvantageCDF = getCumulativeDistributionFunction('disadvantage');
            
            const cdfData = {
                labels: labels,
                datasets: [
                    {
                        label: 'Utrudnienie',
                        data: labels.map(x => disadvantageCDF[x]),
                        borderColor: '#8e44ad',
                        backgroundColor: 'rgba(142, 68, 173, 0.1)',
                        fill: true
                    },
                    {
                        label: '-10',
                        data: labels.map(x => minus10CDF[x]),
                        borderColor: '#e67e22',
                        backgroundColor: 'rgba(230, 126, 34, 0.1)',
                        fill: true
                    },
                    {
                        label: '-20',
                        data: labels.map(x => minus20CDF[x]),
                        borderColor: '#c0392b',
                        backgroundColor: 'rgba(192, 57, 43, 0.1)',
                        fill: true
                    },
                    {
                        label: 'Z przerzutem',
                        data: labels.map(x => rerollCDF[x]),
                        borderColor: '#34495e',
                        backgroundColor: 'rgba(52, 73, 94, 0.1)',
                        fill: true
                    }
                ]
            };
            
            createChart('cdf-chart', cdfData, 'Prawdopodobieństwo sukcesu dla poziomu trudności');
        }

        // Tworzy wykres Chart.js
        function createChart(canvasId, data, title) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            
            // Zniszcz poprzedni wykres jeśli istnieje
            if (window[canvasId + '_chart']) {
                window[canvasId + '_chart'].destroy();
            }
            
            window[canvasId + '_chart'] = new Chart(ctx, {
                type: 'line',
                data: data,
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: title,
                            color: '#f39c12',
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        },
                        legend: {
                            labels: {
                                color: '#ecf0f1'
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Wartość rzutu / Poziom trudności',
                                color: '#bdc3c7'
                            },
                            ticks: {
                                color: '#bdc3c7'
                            },
                            grid: {
                                color: 'rgba(189, 195, 199, 0.2)'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Prawdopodobieństwo',
                                color: '#bdc3c7'
                            },
                            ticks: {
                                color: '#bdc3c7',
                                callback: function(value) {
                                    return (value * 100).toFixed(0) + '%';
                                }
                            },
                            grid: {
                                color: 'rgba(189, 195, 199, 0.2)'
                            }
                        }
                    },
                    elements: {
                        point: {
                            radius: 1
                        },
                        line: {
                            tension: 0.1
                        }
                    }
                }
            });
        }
